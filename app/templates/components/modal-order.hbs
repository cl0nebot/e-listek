{{#modal-dialog
    close="close"
    targetAttachment="center"
    translucentOverlay=true}}

  {{#each tickets as |ticket|}}
    <div>
      <button class="ui button {{if ticket.isActive 'active'}}" {{action (toggle 'isActive' ticket)}}>
        {{ticket.name}} {{ticket.price}}
      </button>
      {{#if ticket.isActive}}
        How much: {{input min="0" type='number' value=ticket.count}}
      {{/if}}
    </div>
  {{/each}}

  <button {{action (toggle 'isNewTicketModalOpen' this)}} class="ui button">
    Or add new ticket
  </button>

  <button {{action 'submit'}} disabled={{not canSendOrder}} class="ui button">
    Send order
  </button>

  {{#if isNewTicketModalOpen}}
    {{#modal-dialog
        close=(action (mut isNewTicketModalOpen false))
        targetAttachment="center"
        translucentOverlay=true}}
      Enter name for new ticket: {{input value=name}}
      <button {{action 'addNewTicket' name}} disabled={{not canAddNewTicket}} class="ui button">Add</button>
    {{/modal-dialog}}
  {{/if}}

{{/modal-dialog}}
