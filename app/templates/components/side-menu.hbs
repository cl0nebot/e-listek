<div class="column">
  <button class="circular ui icon inverted button">
    <i class="icon help"></i>
  </button>
  <button class="circular ui icon inverted right floated button">
    <i class="icon refresh"></i>
  </button>
</div>
<div class="column">
  {{#modal-waitress as |openModal isDisabled|}}
    <button class="ui fluid inverted button" {{action openModal}} disabled={{isDisabled}}> Přivolat obsluhu</button>
  {{/modal-waitress}}
</div>
<div class="column">
  {{link-to ' Menu' 'menu' class="ui fluid inverted button"}}
</div>
<div class="column">
  {{link-to 'Účty' 'tickets' class="ui fluid inverted button"}}
</div>
{{#if orderService.currentOrderPrice}}
  {{#order-view as |order|}}
    <div class="column">
      <button class="ui fluid inverted button huge orange" {{action order}}> Dokončit objednávku ({{money orderService.currentOrderPrice}})</button>
    </div>
  {{/order-view}}
{{else}}
  <div class="column">
    {{link-to ' Zaplatit' 'payment' class="ui fluid inverted button" disabled=(eq tickets.length 0)}}
  </div>
{{/if}}
